@model List<mp_ecommerce_netframework.Models.Product>
<div class="jumbotron">
    <h1>Developer Partner</h1>
    <p class="lead">Web checkout.</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <h2>@item.Name</h2>
            <img src="@item.Url" alt="Autumn" width="200" height="200">
            <br />
            <br />
            <p>$ @item.Price</p>
            <input class="btn btn-default" type="button" title="Comprar" value="Comprar" onclick="location.href='@Url.Action("Pay", "Home",item   )'" />

        </div>
    }
</div>